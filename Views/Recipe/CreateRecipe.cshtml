@model QRSurprise.Models.DAL.Entities.Recipe
@{
	ViewData["Title"] = "CreateRecipe";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<section class="content-header">
	<div class="container-fluid">
		<div class="row mb-2">
			<div class="col-sm-6">
				<h1>Tarif Ekle</h1>
			</div>
		</div>
	</div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12">
				<div class="card card-primary">
					<div class="card-header">
						<h3 class="card-title">Yeni Tarif <small>Ekleme Ekranı</small></h3>
					</div>

                    <form method="post" asp-action="CreateRecipe">
                        <div class="card-body">
                            <div class="form-group">
                                @Html.Label("Tarif Adı:")
                                @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                @Html.Label("Malzemeler:")
                                @Html.TextAreaFor(x => x.Ingredients, new { @class = "form-control tinymce" })
                            </div>
                            <div class="form-group">
                                @Html.Label("Yapılışı:")
                                @Html.TextBoxFor(x => x.Instruction, new { @class = "form-control tinymce" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(x => x.RecipeCategoryId, "Kategori:")
                                @Html.DropDownListFor(x => x.RecipeCategoryId, ViewBag.Categories as List<SelectListItem>, "Kategori Seçin", new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Ekle</button>
                        </div>
                    </form>
				</div>
			</div>
		</div>
	</div>
</section>

